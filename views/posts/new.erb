<section class="session-form">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-primary">
			  <div class="panel-heading">
					<h3 class="panel-title text-center">New post</h3>
			  </div>
			  <div class="panel-body">
			  	<form action="/posts" method="post">
			  		<div class="form-group">
			  		  <input type="text" class="form-control" name="title" placeholder="Title" required>
			  		  <textarea class="form-control" name="content" rows="5" placeholder="Lorem ipsum..."></textarea>
			  		  <br>
			  		  <input type="url" class="form-control" name="photo" placeholder="photo url">
			  		</div>
			  		<button class="btn btn-primary float-right" type="submit">Submit</button>
			  	</form>
			  </div>
			</div>
	</div>
</section>
