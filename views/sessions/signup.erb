<section class="session-form">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="panel panel-primary">
			  <div class="panel-heading">
					<h3 class="panel-title text-center">Sign up</h3>
			  </div>
			  <div class="panel-body">
			  	<form action="/users" method="post">
			  		<div class="form-group">
			  		  <input type="email" class="form-control" name="email" placeholder="your@email.com" required>
			  		  <input type="text" class="form-control" name="first_name" placeholder="first name" required>
			  		  <input type="text" class="form-control" name="last_name" placeholder="last name" required>
			  		  <input type="text" class="form-control" name="nickname" placeholder="displayed nickname" required>
			  		  <br>
			  		  <input type="password" class="form-control" name="password" placeholder="password" required>
			  		  <input type="password" class="form-control" name="confirm_password" placeholder="confirm password" required>
			  		</div>
			  		<button class="btn btn-primary float-right" type="submit">Sign up</button>
			  	</form>
			  	<br>
			  	<p>Have an account? Log in <a href="/login">here</a>.</p>
			  </div>
			</div>
	</div>
</section>
